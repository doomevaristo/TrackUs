<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/defaultListItemHeight">

    <TextView
        android:id="@+id/linhaFavoritaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="8dp"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/linhaFavoritaSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linhaFavoritaText"
        android:paddingLeft="8dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/linhaMunicipioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btExcluir"
        android:layout_toStartOf="@+id/btExcluir"
        android:layout_centerVertical="true"
        android:padding="@dimen/fieldDefaultPadding"
        android:textColor="@color/municipioAtualDetColor"
        android:textSize="@dimen/textSmall" />

    <Button
        android:id="@+id/btExcluir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_excluir"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:focusable="false" />

</RelativeLayout>