<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/linhaBuscadaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/textColorPrimary"
        android:paddingLeft="@dimen/itemTextsDefaultPaddingLeft"
        android:paddingStart="@dimen/itemTextsDefaultPaddingLeft"
        android:paddingTop="@dimen/itemTextsDefaultPaddingTopBottom"
        android:textSize="@dimen/textDefaultSize"
        />

    <TextView
        android:id="@+id/linhaBuscadaSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linhaBuscadaText"
        android:paddingLeft="@dimen/fieldDefaultPadding"
        android:paddingStart="@dimen/fieldDefaultPadding"
        android:paddingBottom="@dimen/itemTextsDefaultPaddingTopBottom"
        android:textSize="@dimen/textSmall"/>

    <com.marcosevaristo.tcc001.components.BotaoFavorito
        android:id="@+id/botaoFavorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        app:fav_rotation_duration="400"
        app:fav_bounce_duration="700"
        />

</RelativeLayout>